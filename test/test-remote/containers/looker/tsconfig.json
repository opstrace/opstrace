{
  "compilerOptions": {
    "outDir": "_tscbuild",
    "strict": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "inlineSourceMap": true,
    "experimentalDecorators": true,
    "pretty": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    // skipLibCheck might be considered unacceptable,
    // also see this discussion:
    // https://github.com/firebase/firebase-functions/issues/551
    "skipLibCheck": true
  },
  "include": [
    "./test*.ts",
    "testutils/**/*.ts",
    "looker/*.ts",
    "loki-node-client-tools/resources/*.json",
    "loki-node-client-tools/*.ts",
    "prom-node-client-tools/resources/*.json",
    "prom-node-client-tools/*.ts"
  ]
}
