{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES6",
    "module": "es2020",
    "outDir": "declarations",
    "lib": ["es6", "dom"],
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "jsx": "react",
    "declarationMap": false,
    "baseUrl": "src",
    "paths": {
      "client/*": ["client/*"],
      "server/*": ["server/*"],
      "state/*": ["state/*"],
      "workers/*": ["workers/*"]
    }
  },
  "include": ["src/**/*", "src/**/*.json"],
  "exclude": ["**/*.stories.tsx", "**/__tests__/*"],
  "references": [{ "path": "../../lib/utils" }]
}